{
  "name": "blitz-blog",
  "version": "1.0.0",
  "scripts": {
    "start": "blitz start",
    "studio": "blitz db studio",
    "db:seed": "node db/seeds.js",
    "build": "NODE_ENV=production blitz db migrate && blitz build",
    "start:prod": "blitz start --production -p $PORT",
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts,.tsx .",
    "test": "echo \"No tests yet\""
  },
  "browserslist": [
    "defaults"
  ],
  "prettier": {
    "semi": false,
    "printWidth": 100
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && pretty-quick --staged",
      "pre-push": "blitz test"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@chakra-ui/core": "0.8.0",
    "@emotion/core": "10.0.34",
    "@emotion/styled": "10.0.27",
    "@prisma/cli": "2.4.1",
    "@prisma/client": "2.4.1",
    "blitz": "0.21.0",
    "date-fns": "2.15.0",
    "emotion-theming": "10.0.27",
    "lodash": "4.17.20",
    "nprogress": "0.2.0",
    "react": "0.0.0-experimental-33c3af284",
    "react-dom": "0.0.0-experimental-33c3af284",
    "react-error-boundary": "2.3.1",
    "react-hook-form": "6.3.2",
    "react-markdown": "4.3.1",
    "react-markdown-editor-lite": "1.2.2",
    "react-select": "3.1.0",
    "react-syntax-highlighter": "13.5.1",
    "secure-password": "4.0.0"
  },
  "devDependencies": {
    "@types/react": "16.9.46",
    "@typescript-eslint/eslint-plugin": "2.34.1-alpha.2",
    "@typescript-eslint/parser": "2.34.1-alpha.2",
    "babel-eslint": "10.1.0",
    "eslint": "6.8.0",
    "eslint-config-react-app": "5.2.1",
    "eslint-plugin-flowtype": "4.7.0",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-jsx-a11y": "6.3.1",
    "eslint-plugin-react": "7.20.5",
    "eslint-plugin-react-hooks": "3.0.0",
    "husky": "4.2.5",
    "lint-staged": "10.2.11",
    "prettier": "2.0.5",
    "pretty-quick": "2.0.1",
    "typescript": "3.9.7"
  },
  "private": true
}
